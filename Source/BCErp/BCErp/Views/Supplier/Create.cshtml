@model BCErp.DTO.SupplierDTO

@{
    ViewBag.Title = "Create";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        User-Create
        <button class="btn btn-sm btn-default" id="btnSave" style="float:right;margin-top:-5px;">Save</button>

    </div>
    <div class="panel-body">
        <div class="form-horizontal">
            <div class="form-group">
                <label class="control-label col-sm-4" for="code">Code:</label>
                <div class="col-sm-8">

                    @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-4" for="name">Name:</label>
                <div class="col-sm-8">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-4" for="email">Email:</label>
                <div class="col-sm-8">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-4" for="pwd">Phone No:</label>
                <div class="col-sm-8">
                    @Html.EditorFor(model => model.PhoneNo, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-4" for="pwd">Register Date:</label>
                <div class="col-sm-8">
                    @Html.EditorFor(model => model.RegisterDate, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

        </div>

    </div>
</div>

<link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/themes/smoothness/jquery-ui.css">
<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
<script>
    $(function () {
        var $j = jQuery.noConflict();
        $("#RegisterDate").datepicker({
            changeMonth: true, changeYear: true
        });


    });

    $(document).ready(function () {

        $("#btnSave").click(function () {

            var regDate = "12/03/2020";
            $.ajax({
                url: '/Supplier/Create',
                method: 'post',
                dataType: 'JSON',
                data: { name: "mgmg", registerDate: regDate },
                success: function (result) {
                    alert(result);
                },
                error: function (result) {
                    console.log(result);
                }
            });



        });//end btnSave
    });

</script>
