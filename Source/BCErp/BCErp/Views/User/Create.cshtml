
@{
    ViewBag.Title = "Create";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        User-Create
        <button class="btn btn-sm btn-default" href="@Url.Action("Create","Role")" style="float:right;margin-top:-5px;">Create</button>

    </div>
    <div class="panel-body">
        <div class="form-horizontal">
            <div class="form-group">
                <label class="control-label col-sm-4" for="code">Code:</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="code" placeholder="Enter Code">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-4" for="name">Name:</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="name" placeholder="Enter Name">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-4" for="email">Email:</label>
                <div class="col-sm-8">
                    <input type="email" class="form-control" id="email" placeholder="Enter Email">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-4" for="pwd">Password:</label>
                <div class="col-sm-8">
                    <input type="password" class="form-control" id="pwd" placeholder="Enter Password">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-4" for="pwd">Role:</label>
                <div class="col-sm-8">
                    @Html.DropDownList("ddlRole", (SelectList)(ViewBag.RoleList), new { @class = "form-control" })

                </div>
            </div>

        </div>

    </div>
</div>